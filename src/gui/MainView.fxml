<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane minHeight="900.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainViewController">
   <content>
      <VBox>
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="Máquina">
                     <items>
                        <MenuItem fx:id="menuItemIniciar" mnemonicParsing="false" onAction="#onMenuItemIniciarAction" text="Iniciar" />
                        <MenuItem fx:id="menuItemConfig" mnemonicParsing="false" onAction="#onMenuItemConfigAction" text="Configurações" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Arquivo">
                     <items>
                        <MenuItem fx:id="menuItemAbrir" mnemonicParsing="false" onAction="#onMenuItemAbrirAction" text="Abrir" />
                        <MenuItem fx:id="menuItemFechar" mnemonicParsing="false" onAction="#onMenuItemFecharAction" text="Fechar" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Ajuda">
                     <items>
                        <MenuItem fx:id="menuItemSobre" mnemonicParsing="false" onAction="#onMenuItemSobreAction" text="Sobre" />
                     </items>
                  </Menu>
               </menus>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </MenuBar>
         </children>
      </VBox>
   </content>
</ScrollPane>
